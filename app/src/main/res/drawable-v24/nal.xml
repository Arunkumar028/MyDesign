<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:top="-100dp"
        android:bottom="0dp"
        android:left="00dp"
        android:right="00dp">
        <rotate
            android:fromDegrees="0"
            android:pivotX="0%"
            android:pivotY="100%">
            <shape
                android:shape="rectangle">
                <solid
                    android:color="#000"/>
            </shape>
        </rotate>
    </item>
    <item android:top="-100dp"
        android:bottom="10dp"
        android:left="-100dp"
        android:right="-200dp">
        <rotate
            android:fromDegrees="-20"
            android:pivotX="10%"
            android:pivotY="100%">
            <shape
                android:shape="rectangle">
                <solid
                    android:color="@color/colorPrimary"/>
            </shape>
        </rotate>
    </item>
</layer-list>
